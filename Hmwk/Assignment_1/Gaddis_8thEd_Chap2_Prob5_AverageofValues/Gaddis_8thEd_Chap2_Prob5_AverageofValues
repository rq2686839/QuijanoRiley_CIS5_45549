//System Libraries
#include <iostream>  //Input - Output Library
using namespace std; //Name-space under which system libraries exist

//User Libraries

//Global Constants

//Function Prototypes

//Execution begins here
int main(int argc, char** argv) {
    //Declare variables
    short int a, b, c, d, e; /*a, b, c, d, and e each will represent
                           one of the five values*/
    float sum, avg;      /*avg is the average of the five values
                           and sum will be the sum of the five 
                           values added together*/                                
   
    //Initialize variables
    a=28;
    b=32;
    c=37;
    d=24;
    e=33;
    
    //Map inputs to outputs or process the data
    sum=a+b+c+d+e; //First, find the sum of the five values
    avg=sum/5; //Second, divide the sum by 5 to attain the average
  
    //Output the transformed data
    cout<<"The average of the five values is "<<avg;
           
    
    //Exit stage right!
    return 0;
}